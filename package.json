{
  "name": "@mvr-studio/protochakra",
  "version": "0.0.9",
  "license": "MIT",
  "homepage": "https://github.com/mvr-studio/protochakra",
  "bugs": "https://github.com/mvr-studio/protochakra/issues",
  "author": "Tomasz Marciniak <tomek@mvr.studio>",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "build:esm": "tsc --noEmit false --outDir dist/esm",
    "build:cjs": "tsc --noEmit false --module commonjs --outDir dist/cjs",
    "dist": "yarn clean && yarn build:esm && yarn build:cjs",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public",
    "deploy-storybook": "storybook-to-ghpages",
    "cy:ct": "cypress open-ct",
    "cy:run-ct": "cypress run-ct",
    "prepare": "husky install"
  },
  "peerDependencies": {
    "@chakra-ui/react": "^1.6",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "framer-motion": "^4",
    "polished": "^4",
    "react": "^17",
    "react-dom": "^17",
    "react-hook-form": "^7",
    "react-scripts": "^4"
  },
  "dependencies": {
    "@chakra-ui/react": "^1.6.7",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "framer-motion": "^4",
    "hamburger-react": "^2.4.1",
    "polished": "^4.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.15.3",
    "react-icons": "^4.2.0",
    "react-scripts": "4.0.3",
    "typescript": "^4.1.2",
    "web-vitals": "^1.0.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.9.11",
    "@cypress/react": "^5.10.0",
    "@cypress/webpack-dev-server": "^1.6.0",
    "@storybook/addon-actions": "^6.3.8",
    "@storybook/addon-essentials": "^6.3.8",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/node-logger": "^6.3.8",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/react": "^6.3.8",
    "@storybook/storybook-deployer": "^2.8.10",
    "@testing-library/cypress": "^8.0.1",
    "cross-env": "^7.0.3",
    "cypress": "^8.4.1",
    "husky": "^7.0.2",
    "prettier": "^2.4.1",
    "storybook-dark-mode": "^1.0.8",
    "terser-webpack-plugin": "^5.2.4",
    "webpack-dev-server": "^4.2.1"
  }
}
